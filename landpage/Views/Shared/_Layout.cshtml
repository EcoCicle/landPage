<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Playfair+Display:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
        }

        html {
        scroll-behavior: smooth;
        }

        /* Fix: Faz o texto do botao ficar branco no hover */
        .btn-outline-success.text-success:hover, 
        .btn-outline-success.text-success:focus {
            color: #fff !important;
        }

        /* Faz o footer ocupar toda a largura da tela */
        html, body {
            height: 100%;
        }
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-4">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand verde-titulo" href="#">EcoCicle</a>

                <!-- Botão responsivo -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links + Botão Registrar -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <!-- Bloco do meio com os links -->
                        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="#quem-somos">Quem somos</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="#solucoes">Soluções</a>
                            </li>
                            <li class="nav-item mx-3">
                                <a class="nav-link" href="#missao">Missão</a>
                            </li>
                        </ul>

                        <!-- Botão Registrar -->
                        <a class="btn btn-outline-success text-success" href="#">Registrar</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="bg-light border-top mt-5 pt-4 pb-2 w-100 px-0">
  <div class="container-fluid">
    <div class="row text-center text-md-start">
      <!-- Logo -->
      <div class="col-md-3 mb-3">
        <h4 class="verde-titulo ">EcoCicle</h4>
      </div>

      <!-- Links -->
      <div class="col-md-3 mb-3">
        <h6>Explore</h6>
        <ul class="list-unstyled">
          <li><a href="#" class="text-decoration-none text-dark">Home</a></li>
          <li><a href="#" class="text-decoration-none text-dark">Quem Somos</a></li>
          <li><a href="#" class="text-decoration-none text-dark">Missão</a></li>
          <li><a href="#" class="text-decoration-none text-dark">Soluções</a></li>
        </ul>
      </div>

      <!-- Contato -->
      <div class="col-md-3 mb-3">
        <h6>Entre em Contato</h6>
          <p>
            <i class="bi bi-whatsapp me-2"></i> +55 11 9634-3499<br>
            <i class="bi bi-envelope-fill me-2"></i> del.ecologicc@gmail.com
          </p>
      </div>

      <!-- Redes Sociais -->
      <div class="col-md-3 mb-3">
        <h6>Nossas Redes Socias</h6>
          <p>
            <i class="bi bi-whatsapp fs-5 me-3"></i>
            <i class="bi bi-instagram fs-5 me-3"></i>
            <i class="bi bi-envelope fs-5 me-3"></i>
            <i class="bi bi-linkedin fs-5"></i>
          </p>
      </div>
    </div>

    <!-- Direitos -->
    <div class="text-center mt-4">
      <small class="text-muted">
        © 2025. All Rights Reserved &nbsp; | &nbsp;
        <a href="#" class="text-muted text-decoration-none">Termos de Uso e Política de Privacidade</a>
      </small>
    </div>
  </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
